{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "scouting-report.v1.schema.json",
  "title": "Scouting Report Contract v1",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "requestId",
    "reportType",
    "reportTitle",
    "summary",
    "createdAt",
    "sections",
    "contractVersion",
    "modelVersion",
    "featureVersion",
    "generatedAt",
    "lineage"
  ],
  "properties": {
    "requestId": { "type": "string", "minLength": 1 },
    "reportType": { "type": ["string", "null"] },
    "reportTitle": { "type": "string" },
    "summary": { "type": "string" },
    "createdAt": { "type": ["string", "null"] },
    "generatedAt": { "type": ["string", "null"] },
    "contractVersion": { "type": "string", "const": "scouting-report.v1" },
    "modelVersion": { "type": "string" },
    "featureVersion": { "type": "string" },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["title", "content", "order"],
        "properties": {
          "title": { "type": "string" },
          "content": { "type": ["string", "object", "array", "number", "boolean", "null"] },
          "order": { "type": "integer" }
        }
      }
    },
    "lineage": {
      "type": "object",
      "required": ["requestId", "jobId", "attempt"],
      "properties": {
        "requestId": { "type": ["string", "null"] },
        "jobId": { "type": ["integer", "null"] },
        "attempt": { "type": ["integer", "null"] }
      }
    }
  }
}
